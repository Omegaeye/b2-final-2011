<h2 style="width:50%" class="white_glow"><center> Flight <%=@flight.id%></center></h2>
  <table class="table table-striped table-borderless" style="width:50%">
    <thead style="text-align:center">
      <tr>
        <th scope="col" class="white_glow">Number</th>
        <th scope="col" class="white_glow">Date</th>
        <th scope="col" class="white_glow">Time</th>
        <th scope="col" class="white_glow">Departure</th>
        <th scope="col" class="white_glow">Arrivals</th>

      </tr>
    </thead>
    <tbody>
        <section id="flight-<%= @flight.id %>">
          <tr style="text-align:center">
            <td><%= @flight.number %></td>
            <td><%= @flight.date %></td>
            <td><%= @flight.time %></td>
            <td><%= @flight.departure %></td>
            <td><%= @flight.arrival %></td>
          </tr>
        </section>
    </tbody>
  </table>

  <h2 style="width:50%" class="white_glow"><center> Passengers</center></h2>
    <table class="table table-striped table-borderless" style="width:50%">
      <thead style="text-align:center">
        <tr>
          <th scope="col" class="white_glow">Name</th>
          <th scope="col" class="white_glow">Age</th>
        </tr>
      </thead>
      <tbody>
        <% @flight.passengers.each do |passenger| %>
          <% if passenger.age > 18 %>
            <section id="passenger-<%= passenger.id %>">
              <tr style="text-align:center">
                <td><%= passenger.name %></td>
                <td><%= passenger.age %></td>
                <td><%= button_to "Remove Passenger", flight_path(@flight.id), method: :delete, local: true, params:{remove: passenger.id} %></td>
              </tr>
            </section>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <h2>Average Age of Passengers</h2>
    <%= @flight.passengers.average_age %>
