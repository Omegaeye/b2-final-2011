  <h2 style="width:50%" class="white_glow"><center> Flights</center></h2>
    <table class="table table-striped table-borderless" style="width:50%">
      <thead style="text-align:center">
        <tr>
          <th scope="col" class="white_glow">Number</th>
          <th scope="col" class="white_glow">Date</th>
          <th scope="col" class="white_glow">Time</th>
          <th scope="col" class="white_glow">Departure</th>
          <th scope="col" class="white_glow">Arrivals</th>
          <th scope="col" class="white_glow">Number of Passengers</th>

        </tr>
      </thead>
      <tbody>
        <% @flights.departure_order.each do |flight| %>
          <section id="flight-<%= flight.id %>">
            <tr style="text-align:center">
              <td><%= link_to flight.number, flight_path(flight) %></td>
              <td><%= flight.date %></td>
              <td><%= flight.time %></td>
              <td><%= flight.departure %></td>
              <td><%= flight.arrival %></td>
              <td><%= flight.passengers.count %></td>
            </tr>
          </section>
        <% end %>
      </tbody>
    </table>
